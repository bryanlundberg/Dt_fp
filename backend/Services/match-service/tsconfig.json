{
  "compilerOptions": {
    "target": "ES6",                     // Target ECMAScript version
    "module": "CommonJS",                // CommonJS for Node.js compatibility
    "strict": true,                      // Enable strict type checking
    "esModuleInterop": true,             // Allow default imports from non-ESM modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  // Output directory for compiled JS
    "rootDir": "./src"                   // Input directory for TypeScript files
  },
  "include": ["src/**/*.ts"],            // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]            // Exclude node_modules from compilation
}
